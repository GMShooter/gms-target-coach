{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@14.15.2",
        "experimental:mcp"
      ],
      "alwaysAllow": [
        "firebase_update_environment",
        "firebase_get_project"
      ]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@0.5.5",
        "--access-token",
        "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImF2YndwdXhoa3l2ZnlvbnJwYnFnIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDk2NDUxNzUsImV4cCI6MjA2NTIyMTE3NX0.DnuWRHUglMP0yAb5jtVtfr3Gq-N1711W36r6LMpTYGE"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "alwaysAllow": [
        "puppeteer_navigate",
        "puppeteer_click",
        "puppeteer_screenshot",
        "puppeteer_evaluate"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "alwaysAllow": [
        "get_repos",
        "get_issues",
        "create_issue",
        "get_pull_requests"
      ]
    },
    "@magicuidesign/mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@magicuidesign/mcp@latest"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "alwaysAllow": [
        "getUIComponents",
        "getLayout",
        "getMedia",
        "getMotion",
        "getTextReveal",
        "getTextEffects",
        "getButtons",
        "getEffects",
        "getWidgets",
        "getBackgrounds",
        "getDevices"
      ],
      "meta": {
        "name": "Magic UI Design MCP",
        "description": "Official Magic UI Design MCP server.",
        "author": "Magic UI Design"
      }
    },
    "eslint": {
      "command": "npx",
      "args": [
        "-y",
        "@eslint/mcp@latest"
      ],
      "alwaysAllow": [
        "lint_file",
        "fix_file",
        "get_config"
      ],
      "meta": {
        "name": "ESLint MCP",
        "description": "Lints and auto-fixes code using ESLint through MCP.",
        "author": "ESLint Team"
      }
    },
    "eslint_prettier": {
      "command": "npx",
      "args": [
        "-y",
        "prettier-eslint"
      ],
      "alwaysAllow": [
        "format_file",
        "analyze_file"
      ],
      "meta": {
        "name": "Prettier + ESLint MCP",
        "description": "Formats JS/TS/React files with Prettier, then fixes via ESLint --fix.",
        "author": "prettier-eslint"
      }
    },
    "style_prettier": {
      "command": "npx",
      "args": [
        "-y",
        "prettier-stylelint"
      ],
      "alwaysAllow": [
        "format_file"
      ],
      "meta": {
        "name": "Prettier + Stylelint MCP",
        "description": "Formats CSS/SCSS/LESS/JSON styles with Prettier, then fixes via Stylelint --fix.",
        "author": "prettier-stylelint"
      }
    }
  }
}
